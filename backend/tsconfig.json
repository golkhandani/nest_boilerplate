{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "alwaysStrict": true,
    "diagnostics": true,
    // "strictNullChecks": true,
    "baseUrl": "./src",
    "paths": {
      "@services/*": ["services/*"],
      "@shared/*": ["shared/*"],
      "@constants/*": ["constants/*"],
      "@sockets/*": ["sockets/*"]
    },
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true
  },
  "exclude": ["node_modules", "dist", "statics/**"]
}
